<div class="mb-8">
  <div class="flex items-center gap-4">
    <%= link_to "â† Back to Exchange", admin_set_exchange_path(@slot.set_exchange), class: "text-gray-400 hover:text-white" %>
    <h1 class="text-3xl font-bold text-white">Edit Qualification</h1>
  </div>
  <p class="mt-2 text-gray-400">Slot <%= @slot.position %></p>
</div>

<div class="max-w-2xl">
  <%= form_with model: [:admin, @qualification], class: "space-y-6" do |f| %>
    <% if @qualification.errors.any? %>
      <div class="rounded-lg bg-red-900/50 border border-red-700 p-4">
        <h3 class="font-medium text-red-300"><%= pluralize(@qualification.errors.count, "error") %>:</h3>
        <ul class="mt-2 list-disc list-inside text-sm text-red-400">
          <% @qualification.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :qualification_type, "Type", class: "block text-sm font-medium text-gray-300" %>
      <%= f.select :qualification_type, options_for_select([["Rating Range", "rating_range"], ["Specific Card", "specific_card"], ["Specific Set", "specific_set"]], selected: @qualification.qualification_type), {}, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm qualification-type-select" %>
    </div>

    <div class="qualification-fields qualification-type-rating_range <%= @qualification.qualification_type != 'rating_range' ? 'hidden' : '' %>">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :min_rating, "Min Rating", class: "block text-sm font-medium text-gray-300" %>
          <%= f.number_field :min_rating, in: 50..100, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :max_rating, "Max Rating", class: "block text-sm font-medium text-gray-300" %>
          <%= f.number_field :max_rating, in: 50..100, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm" %>
        </div>
      </div>
    </div>

    <div class="qualification-fields qualification-type-specific_card <%= @qualification.qualification_type != 'specific_card' ? 'hidden' : '' %>">
      <%= f.label :card_id, "Card", class: "block text-sm font-medium text-gray-300" %>
      <%= f.collection_select :card_id, Card.all.order(:name), :id, :name, { include_blank: "Select a card" }, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm" %>
    </div>

    <div class="qualification-fields qualification-type-specific_set <%= @qualification.qualification_type != 'specific_set' ? 'hidden' : '' %>">
      <%= f.label :card_set_id, "Card Set", class: "block text-sm font-medium text-gray-300" %>
      <%= f.collection_select :card_set_id, CardSet.all.order(:name), :id, :name, { include_blank: "Select a set" }, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm" %>
    </div>

    <div class="flex justify-end gap-4 pt-6">
      <%= link_to "Cancel", admin_set_exchange_path(@slot.set_exchange), class: "rounded-md border border-gray-600 bg-gray-700 px-4 py-2 text-sm font-semibold text-gray-300 hover:bg-gray-600" %>
      <%= f.submit "Save Qualification", class: "rounded-md bg-cyan-600 px-4 py-2 text-sm font-semibold text-white hover:bg-cyan-500" %>
    <% end %>
  </div>
</div>

<script>
document.querySelector('.qualification-type-select')?.addEventListener('change', function() {
  const type = this.value;
  document.querySelectorAll('.qualification-fields').forEach(div => div.classList.add('hidden'));
  document.querySelector(`.qualification-type-${type}`)?.classList.remove('hidden');
});
</script>
