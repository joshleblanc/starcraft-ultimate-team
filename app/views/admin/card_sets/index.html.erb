<div class="mb-8 flex items-center justify-between">
  <div>
    <h1 class="text-3xl font-bold text-white">Admin: Card Sets</h1>
    <p class="mt-2 text-gray-400">Manage card sets (e.g., MLG 2019, IEM Katowice)</p>
  </div>
  <%= link_to "Create New Card Set", new_admin_card_set_path, class: "rounded-md bg-cyan-600 px-4 py-2 text-sm font-semibold text-white hover:bg-cyan-500" %>
</div>

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <% @card_sets.each do |card_set| %>
    <div class="rounded-lg border border-gray-700 bg-gray-800 p-6">
      <div class="flex items-start justify-between">
        <div>
          <h3 class="text-lg font-semibold text-white"><%= card_set.name %></h3>
          <p class="mt-1 text-sm text-gray-400"><%= card_set.description %></p>
        </div>
        <span class="rounded-full bg-cyan-900 px-3 py-1 text-xs font-medium text-cyan-300">
          <%= card_set.card_count %> cards
        </span>
      </div>

      <div class="mt-4 flex items-center gap-2 text-sm">
        <span class="text-gray-500">Avg Rating:</span>
        <span class="flex h-6 w-6 items-center justify-center rounded-full bg-cyan-900 text-xs font-bold text-cyan-300">
          <%= card_set.average_rating %>
        </span>
      </div>

      <div class="mt-4 flex gap-2">
        <%= link_to "View Cards", admin_card_set_path(card_set), class: "flex-1 rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-center text-sm font-semibold text-gray-300 hover:bg-gray-600" %>
        <%= link_to "Edit", edit_admin_card_set_path(card_set), class: "flex-1 rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-center text-sm font-semibold text-gray-300 hover:bg-gray-600" %>
      </div>
    </div>
  <% end %>
</div>

<% if @card_sets.empty? %>
  <div class="rounded-lg border border-gray-700 bg-gray-800 p-12 text-center">
    <div class="text-4xl mb-4">ðŸ“¦</div>
    <h3 class="text-lg font-semibold text-white mb-2">No card sets yet</h3>
    <p class="text-gray-400 mb-4">Create your first card set to start organizing cards by tournament or season.</p>
    <%= link_to "Create Card Set", new_admin_card_set_path, class: "inline-flex items-center px-4 py-2 rounded-md bg-cyan-600 text-white font-semibold hover:bg-cyan-500" %>
  </div>
<% end %>
