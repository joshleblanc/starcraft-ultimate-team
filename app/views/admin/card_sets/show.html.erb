<div class="mb-8">
  <div class="flex items-center gap-4">
    <%= link_to "â† Back to Card Sets", admin_card_sets_path, class: "text-gray-400 hover:text-white" %>
  </div>
  <div class="mt-4 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-white"><%= @card_set.name %></h1>
      <p class="mt-2 text-gray-400"><%= @card_set.description %></p>
    </div>
    <div class="flex gap-3">
      <%= link_to "Edit Set", edit_admin_card_set_path(@card_set), class: "rounded-md border border-gray-600 bg-gray-700 px-4 py-2 text-sm font-semibold text-gray-300 hover:bg-gray-600" %>
      <%= link_to "Add Card", new_admin_card_path(card_set_id: @card_set.id), class: "rounded-md bg-cyan-600 px-4 py-2 text-sm font-semibold text-white hover:bg-cyan-500" %>
    </div>
  </div>
</div>

<div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6">
  <% @card_set.cards.each do |card| %>
    <div class="relative rounded-xl bg-gray-800 border border-gray-700 p-4">
      <div class="flex items-center justify-between mb-3">
        <span class="text-2xl"><%= card.race_icon %></span>
      </div>
      <h3 class="font-semibold text-white truncate"><%= card.name %></h3>
      <p class="text-xs text-gray-400"><%= card.player_role %></p>
      <div class="mt-3 flex items-center justify-center rounded-lg bg-gray-900 py-2">
        <span class="text-xl font-bold text-cyan-400"><%= card.overall_rating %></span>
      </div>
      <div class="mt-2 grid grid-cols-5 gap-1 text-center">
        <div class="text-xs text-gray-500">M</div>
        <div class="text-xs text-gray-500">Î¼</div>
        <div class="text-xs text-gray-500">â˜…</div>
        <div class="text-xs text-gray-500">P</div>
        <div class="text-xs text-gray-500">S</div>
        <div class="text-sm text-cyan-400"><%= card.macro %></div>
        <div class="text-sm text-cyan-400"><%= card.micro %></div>
        <div class="text-sm text-cyan-400"><%= card.starsense %></div>
        <div class="text-sm text-cyan-400"><%= card.poise %></div>
        <div class="text-sm text-cyan-400"><%= card.speed %></div>
      </div>
    </div>
  <% end %>

  <%= link_to new_admin_card_path(card_set_id: @card_set.id), class: "flex flex-col items-center justify-center rounded-xl border-2 border-dashed border-gray-600 p-4 hover:border-cyan-500 hover:bg-gray-800/50 transition-colors" do %>
    <div class="text-4xl mb-2">âž•</div>
    <span class="text-sm font-medium text-gray-400">Add Card</span>
  <% end %>
</div>

<% if @card_set.cards.empty? %>
  <div class="rounded-lg border border-gray-700 bg-gray-800 p-12 text-center">
    <div class="text-4xl mb-4">ðŸŽ´</div>
    <h3 class="text-lg font-semibold text-white mb-2">No cards in this set</h3>
    <p class="text-gray-400 mb-4">Add cards to this set to create the tournament roster.</p>
    <%= link_to "Add First Card", new_admin_card_path(card_set_id: @card_set.id), class: "inline-flex items-center px-4 py-2 rounded-md bg-cyan-600 text-white font-semibold hover:bg-cyan-500" %>
  </div>
<% end %>
