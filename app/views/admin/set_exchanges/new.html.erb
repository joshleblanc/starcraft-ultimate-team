<div class="mb-8">
  <div class="flex items-center gap-4">
    <%= link_to "â† Back", admin_set_exchanges_path, class: "text-gray-400 hover:text-white" %>
    <h1 class="text-3xl font-bold text-white">Create New Exchange</h1>
  </div>
  <p class="mt-2 text-gray-400">Set up a "trade up" program with flexible slot requirements</p>
</div>

<div class="max-w-4xl">
  <%= form_with model: [:admin, @set_exchange], class: "space-y-8" do |f| %>
    <% if @set_exchange.errors.any? %>
      <div class="rounded-lg bg-red-900/50 border border-red-700 p-4">
        <h3 class="font-medium text-red-300"><%= pluralize(@set_exchange.errors.count, "error") %> prohibited this exchange from being saved:</h3>
        <ul class="mt-2 list-disc list-inside text-sm text-red-400">
          <% @set_exchange.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="rounded-lg border border-gray-700 bg-gray-800 p-6">
      <h2 class="text-lg font-semibold text-white mb-4">Exchange Details</h2>

      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <%= f.label :card_set_id, "Card Set", class: "block text-sm font-medium text-gray-300" %>
          <%= f.collection_select :card_set_id, CardSet.all.order(:name), :id, :name, {}, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm" %>
        </div>

        <div class="sm:col-span-2">
          <%= f.label :name, class: "block text-sm font-medium text-gray-300" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white placeholder-gray-400 focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm", placeholder: "e.g., MLG 2019 Trade Up" %>
        </div>

        <div class="sm:col-span-2">
          <%= f.label :description, class: "block text-sm font-medium text-gray-300" %>
          <%= f.text_area :description, rows: 2, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white placeholder-gray-400 focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm", placeholder: "Describe this exchange program" %>
        </div>
      </div>

      <div class="border-t border-gray-700 pt-6 mt-6">
        <h3 class="text-md font-medium text-white mb-4">Output (What players receive)</h3>
        <div class="grid grid-cols-3 gap-6">
          <div>
            <%= f.label :output_min_rating, "Min Rating", class: "block text-sm font-medium text-gray-300" %>
            <%= f.number_field :output_min_rating, in: 50..100, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :output_max_rating, "Max Rating", class: "block text-sm font-medium text-gray-300" %>
            <%= f.number_field :output_max_rating, in: 50..100, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :output_count, "Count Received", class: "block text-sm font-medium text-gray-300" %>
            <%= f.number_field :output_count, in: 1..10, value: 1, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm" %>
          </div>
        </div>
      </div>

      <div class="flex items-center gap-4 mt-6">
        <%= f.check_box :active, class: "h-4 w-4 rounded border-gray-600 bg-gray-700 text-cyan-600 focus:ring-cyan-500" %>
        <%= f.label :active, "Active (players can use this exchange)", class: "text-sm font-medium text-gray-300" %>
      </div>
    </div>

    <div class="rounded-lg border border-gray-700 bg-gray-800 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-white">Slots & Requirements</h2>
      </div>

      <p class="text-sm text-gray-400 mb-6">Each slot represents one card the player must provide. You can add multiple qualifications to a slot (e.g., "rating 77-79 OR card set MLG 2019").</p>

      <div id="slots-container" class="space-y-4">
        <%= f.fields_for :exchange_slots do |slot_fields| %>
          <div class="rounded-lg bg-gray-900 p-4 border border-gray-700 slot-container">
            <div class="flex items-center justify-between mb-3">
                <% p slot_fields.object %>
              <span class="font-medium text-white">Slot <%= slot_fields.object&.position %></span>
              <% if slot_fields.object&.persisted? %>
                <%= button_to "Remove Slot", remove_slot_admin_set_exchange_path(@set_exchange, position: slot_fields.object.position), method: :post, class: "text-sm text-red-400 hover:text-red-300" %>
              <% else %>
                <span class="text-xs text-gray-500">New slot</span>
              <% end %>
            </div>

            <% slot = slot_fields.object %>
            <% if slot&.persisted? && slot&.exchange_qualifications.any? %>
              <div class="space-y-2">
                <% slot.exchange_qualifications.each do |qual| %>
                  <div class="flex items-center gap-3 p-2 rounded bg-gray-800">
                    <%= render "qualification_form", qualification: qual, slot: slot %>
                    <%= button_to "Remove", remove_qualification_admin_set_exchange_path(qual.exchange_slot.set_exchange, qual.id), method: :delete, class: "text-xs text-red-400 hover:text-red-300" %>
                  </div>
                <% end %>
              </div>
              <%= button_to "Add Qualification", add_qualification_admin_set_exchange_path(slot), method: :post, class: "mt-3 text-sm text-cyan-400 hover:text-cyan-300" %>
            <% elsif slot&.persisted? %>
              <p class="text-sm text-gray-500 mb-3">No qualifications yet.</p>
              <%= button_to "Add Qualification", add_qualification_admin_set_exchange_path(slot), method: :post, class: "text-sm text-cyan-400 hover:text-cyan-300" %>
            <% else %>
              <p class="text-sm text-gray-500">Slot will be created with qualifications after saving.</p>
            <% end %>
          </div>
        <% end %>
      </div>

      <% if @set_exchange.persisted? %>
        <div class="mt-4">
          <%= button_to "Add Slot", add_slot_admin_set_exchange_path(@set_exchange), method: :post, class: "rounded-md border border-gray-600 bg-gray-700 px-4 py-2 text-sm font-semibold text-gray-300 hover:bg-gray-600" %>
        </div>
      <% end %>
    </div>

    <div class="flex justify-end gap-4 pt-6">
      <%= link_to "Cancel", admin_set_exchanges_path, class: "rounded-md border border-gray-600 bg-gray-700 px-4 py-2 text-sm font-semibold text-gray-300 hover:bg-gray-600" %>
      <%= f.submit "Create Exchange", class: "rounded-md bg-cyan-600 px-4 py-2 text-sm font-semibold text-white hover:bg-cyan-500" %>
    </div>
  <% end %>
</div>
