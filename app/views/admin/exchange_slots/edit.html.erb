<div class="mb-8">
  <div class="flex items-center gap-4">
    <%= link_to "â† Back to Exchange", admin_set_exchange_path(@slot.set_exchange), class: "text-gray-400 hover:text-white" %>
    <h1 class="text-3xl font-bold text-white">Edit Slot</h1>
  </div>
</div>

<div class="max-w-2xl">
  <%= form_with model: [:admin, @slot], class: "space-y-6" do |f| %>
    <% if @slot.errors.any? %>
      <div class="rounded-lg bg-red-900/50 border border-red-700 p-4">
        <h3 class="font-medium text-red-300"><%= pluralize(@slot.errors.count, "error") %>:</h3>
        <ul class="mt-2 list-disc list-inside text-sm text-red-400">
          <% @slot.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :position, "Position", class: "block text-sm font-medium text-gray-300" %>
      <%= f.number_field :position, min: 1, class: "mt-1 block w-full rounded-md border border-gray-600 bg-gray-700 px-3 py-2 text-white focus:border-cyan-500 focus:outline-none focus:ring-1 focus:ring-cyan-500 sm:text-sm" %>
    </div>

    <div class="flex justify-end gap-4 pt-6">
      <%= link_to "Cancel", admin_set_exchange_path(@slot.set_exchange), class: "rounded-md border border-gray-600 bg-gray-700 px-4 py-2 text-sm font-semibold text-gray-300 hover:bg-gray-600" %>
      <%= f.submit "Save Slot", class: "rounded-md bg-cyan-600 px-4 py-2 text-sm font-semibold text-white hover:bg-cyan-500" %>
    <% end %>
  </div>
</div>
