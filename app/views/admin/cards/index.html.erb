<div class="mb-8 flex items-center justify-between">
  <div>
    <h1 class="text-3xl font-bold text-white">Admin: Cards</h1>
    <p class="mt-2 text-gray-400">Manage all cards in the game</p>
  </div>
  <%= link_to "Create New Card", new_admin_card_path, class: "rounded-md bg-cyan-600 px-4 py-2 text-sm font-semibold text-white hover:bg-cyan-500" %>
</div>

<div class="overflow-hidden rounded-lg border border-gray-700 bg-gray-800">
  <table class="min-w-full divide-y divide-gray-700">
    <thead class="bg-gray-900">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-400">Card</th>
        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-400">Race</th>
        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-400">Tier</th>
        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-400">Role</th>
        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-400">Overall</th>
        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-400">Stats</th>
        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-400">Game Phases</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-700 bg-gray-800">
      <% @cards.each do |card| %>
        <tr class="hover:bg-gray-700/50">
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <span class="text-2xl mr-2"><%= card.race_icon %></span>
              <div>
                <div class="font-medium text-white"><%= card.name %></div>
                <div class="text-xs text-gray-400">ID: <%= card.id %></div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="inline-flex rounded-full bg-gray-700 px-2 text-xs font-semibold leading-5 text-white"><%= card.race %></span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="inline-flex rounded-full px-2 text-xs font-semibold leading-5 text-white" style="background-color: <%= card.rarity_color %>">
              <%= card.rating_tier.capitalize %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"><%= card.player_role %></td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-cyan-900 text-sm font-bold text-cyan-300">
              <%= card.overall_rating %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
            <div class="grid grid-cols-5 gap-1 text-center">
              <div title="Macro"><div class="text-xs text-gray-500">M</div><div class="font-medium text-cyan-400"><%= card.macro %></div></div>
              <div title="Micro"><div class="text-xs text-gray-500">μ</div><div class="font-medium text-cyan-400"><%= card.micro %></div></div>
              <div title="Starsense"><div class="text-xs text-gray-500">★</div><div class="font-medium text-cyan-400"><%= card.starsense %></div></div>
              <div title="Poise"><div class="text-xs text-gray-500">P</div><div class="font-medium text-cyan-400"><%= card.poise %></div></div>
              <div title="Speed"><div class="text-xs text-gray-500">S</div><div class="font-medium text-cyan-400"><%= card.speed %></div></div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-400">
            <div class="grid grid-cols-3 gap-1 text-center">
              <div class="text-xs text-gray-500">Early</div>
              <div class="text-xs text-gray-500">Mid</div>
              <div class="text-xs text-gray-500">Late</div>
              <div class="font-medium <%= card.early_game >= 0 ? 'text-green-400' : 'text-red-400' %>"><%= card.early_game %></div>
              <div class="font-medium <%= card.mid_game >= 0 ? 'text-green-400' : 'text-red-400' %>"><%= card.mid_game %></div>
              <div class="font-medium <%= card.late_game >= 0 ? 'text-green-400' : 'text-red-400' %>"><%= card.late_game %></div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
