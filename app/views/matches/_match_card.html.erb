<%= link_to match, class: "block rounded-xl bg-gray-800 border border-gray-700 p-4 hover:border-gray-600 transition-colors" do %>
  <div class="flex items-center justify-between">
    <!-- Teams -->
    <div class="flex items-center gap-6">
      <div class="text-right">
        <div class="font-semibold text-lg <%= match.home_team == my_team ? 'text-cyan-400' : 'text-white' %>">
          <%= match.home_team.name %>
          <% if match.home_team.is_cpu? %><span class="text-xs text-gray-500 font-normal">ðŸ¤–</span><% end %>
        </div>
        <div class="text-xs text-gray-500">Home</div>
      </div>
      
      <!-- Score or VS -->
      <div class="text-center px-4">
        <% if match.completed? %>
          <div class="text-2xl font-bold">
            <span class="<%= match.home_score > match.away_score ? 'text-green-400' : 'text-white' %>"><%= match.home_score %></span>
            <span class="text-gray-500">-</span>
            <span class="<%= match.away_score > match.home_score ? 'text-green-400' : 'text-white' %>"><%= match.away_score %></span>
          </div>
        <% elsif match.status == "in_progress" %>
          <div class="text-2xl font-bold text-yellow-400">
            <%= match.home_score %> - <%= match.away_score %>
          </div>
        <% else %>
          <div class="text-gray-500 text-lg">VS</div>
        <% end %>
      </div>
      
      <div class="text-left">
        <div class="font-semibold text-lg <%= match.away_team == my_team ? 'text-cyan-400' : 'text-white' %>">
          <% if match.away_team.is_cpu? %><span class="text-xs text-gray-500 font-normal">ðŸ¤–</span><% end %>
          <%= match.away_team.name %>
        </div>
        <div class="text-xs text-gray-500">Away</div>
      </div>
    </div>
    
    <!-- Status & Actions -->
    <div class="text-right">
      <% if match.completed? %>
        <% if match.winner_team == my_team %>
          <span class="px-3 py-1 rounded-full text-sm font-semibold bg-green-500/20 text-green-400">Victory</span>
        <% else %>
          <span class="px-3 py-1 rounded-full text-sm font-semibold bg-red-500/20 text-red-400">Defeat</span>
        <% end %>
      <% elsif match.status == "in_progress" %>
        <span class="px-3 py-1 rounded-full text-sm font-semibold bg-yellow-500/20 text-yellow-400">In Progress</span>
      <% elsif match.status == "lineup_submitted" %>
        <span class="px-3 py-1 rounded-full text-sm font-semibold bg-blue-500/20 text-blue-400">Ready to Play</span>
      <% else %>
        <span class="px-3 py-1 rounded-full text-sm font-semibold bg-gray-500/20 text-gray-400">Set Lineup</span>
      <% end %>
      
      <div class="text-xs text-gray-500 mt-1">
        <%= match.league.name %> â€¢ Round <%= match.round %>
      </div>
    </div>
  </div>
<% end %>
