<div class="mb-8">
  <h1 class="text-3xl font-bold text-white">ðŸ”„ Card Exchanges</h1>
  <p class="mt-2 text-gray-400">Trade up lower-rated cards for higher-rated ones from the same set</p>
</div>

<% if @exchanges_by_set.empty? %>
  <div class="rounded-lg border border-gray-700 bg-gray-800 p-12 text-center">
    <div class="text-4xl mb-4">ðŸ”„</div>
    <h3 class="text-lg font-semibold text-white mb-2">No exchanges available</h3>
    <p class="text-gray-400 mb-4">You need to collect cards from sets that have active exchanges.</p>
    <%= link_to "Open Packs", packs_path, class: "inline-flex items-center px-4 py-2 rounded-md bg-cyan-600 text-white font-semibold hover:bg-cyan-500" %>
  </div>
<% else %>
  <div class="space-y-8">
    <% @exchanges_by_set.each do |card_set, exchanges| %>
      <div class="rounded-lg border border-gray-700 bg-gray-800 p-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h2 class="text-xl font-bold text-white"><%= card_set.name %></h2>
            <p class="text-sm text-gray-400"><%= card_set.description %></p>
          </div>
          <span class="rounded-full bg-cyan-900 px-3 py-1 text-xs font-medium text-cyan-300">
            <%= card_set.cards.count %> cards
          </span>
        </div>

        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <% exchanges.each do |exchange| %>
            <% available = exchange.available_exchange_count(current_user) %>
            <div class="rounded-lg bg-gray-900 p-4 <%= available > 0 ? 'border border-green-700' : 'border border-gray-700' %>">
              <div class="flex items-start justify-between mb-3">
                <h3 class="font-semibold text-white"><%= exchange.name %></h3>
                <% if available > 0 %>
                  <span class="rounded-full bg-green-900 px-2 py-0.5 text-xs font-medium text-green-300">
                    <%= available %> available
                  </span>
                <% end %>
              </div>

              <p class="text-sm text-gray-400 mb-3"><%= exchange.description %></p>

              <div class="flex items-center gap-2 text-sm mb-4">
                <div class="flex-1 text-center rounded bg-gray-800 p-2">
                  <div class="text-xs text-gray-500">Give</div>
                  <div class="font-semibold text-gray-300"><%= exchange.input_count %>x <%= exchange.input_min_rating %>-<%= exchange.input_max_rating %></div>
                </div>
                <div class="text-gray-500">â†’</div>
                <div class="flex-1 text-center rounded bg-cyan-900/50 p-2">
                  <div class="text-xs text-gray-500">Get</div>
                  <div class="font-semibold text-cyan-300"><%= exchange.output_count %>x <%= exchange.output_min_rating %>-<%= exchange.output_max_rating %></div>
                </div>
              </div>

              <% if available > 0 %>
                <%= button_to "Exchange", redeem_exchange_path(exchange), method: :post, class: "w-full rounded-md bg-cyan-600 px-3 py-2 text-sm font-semibold text-white hover:bg-cyan-500" %>
              <% else %>
                <button disabled class="w-full rounded-md bg-gray-700 px-3 py-2 text-sm font-semibold text-gray-400 cursor-not-allowed">
                  Need <%= exchange.input_count %> cards
                </button>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
