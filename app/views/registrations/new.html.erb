<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-cyan-400 mb-2">âš¡ SC2 Ultimate Team</h1>
      <p class="text-gray-400">Create your account</p>
    </div>

    <div class="rounded-xl bg-gray-800 border border-gray-700 p-8">
      <% if @user.errors.any? %>
        <div class="mb-6 rounded-md bg-red-900/50 border border-red-500 p-4">
          <ul class="list-disc list-inside text-sm text-red-400">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: registration_path, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email", class: "w-full rounded-md bg-gray-700 border border-gray-600 px-4 py-2 text-white placeholder-gray-500 focus:border-cyan-500 focus:ring-cyan-500" %>
        </div>

        <div>
          <%= form.label :username, "Username", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= form.text_field :username, placeholder: "Choose a username", class: "w-full rounded-md bg-gray-700 border border-gray-600 px-4 py-2 text-white placeholder-gray-500 focus:border-cyan-500 focus:ring-cyan-500" %>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "At least 8 characters", maxlength: 72, class: "w-full rounded-md bg-gray-700 border border-gray-600 px-4 py-2 text-white placeholder-gray-500 focus:border-cyan-500 focus:ring-cyan-500" %>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", maxlength: 72, class: "w-full rounded-md bg-gray-700 border border-gray-600 px-4 py-2 text-white placeholder-gray-500 focus:border-cyan-500 focus:ring-cyan-500" %>
        </div>

        <%= form.submit "Create Account", class: "w-full rounded-md bg-cyan-600 px-4 py-2 font-semibold text-white hover:bg-cyan-500 cursor-pointer" %>
      <% end %>

      <div class="mt-6 text-center text-sm">
        <%= link_to "Already have an account? Sign in", new_session_path, class: "text-cyan-400 hover:text-cyan-300" %>
      </div>
    </div>
  </div>
</div>
