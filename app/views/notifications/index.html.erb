      <div class="text-2xl"><%= notification.icon %></div>
      <div class="flex-1">
        <div class="text-white"><%= notification.message %></div>
        <div class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(notification.created_at) %> ago</div>
      </div>
      <div class="flex items-center gap-2">
        <% if notification.url.present? %>
          <%= link_to "View", notification.url, class: "text-sm text-cyan-400 hover:text-cyan-300" %>
        <% end %>
        <% if notification.unread? %>
          <%= button_to mark_as_read_notification_path(notification), class: "text-gray-500 hover:text-white" do %>
